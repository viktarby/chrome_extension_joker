{
  "manifest_version": 2,
  "name": "Real Joker - app for playing tricks",
  "short_name": "Real Joker",
  "description": "Play tricks on your friends. Have fun with image faker, big boss control and much more. Perfect for April 1 Fool's day.",
  "version": "1.0.3",
  "author": "V.Vayavodzin",
  "browser_action": {
    "default_popup": "extension.html",
    "default_icon": "images/default_icon.png"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "*://*/*",
    "webRequest",
    "webRequestBlocking",
    "declarativeContent"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "css": [],
    "js": ["content.js"],
    "all_frames": true
  }
  ]
}